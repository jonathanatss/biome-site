{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".", /* Base directory to resolve non-absolute module names. */
    "paths": {
      "@styles/*": ["./styles/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./utils/*"],
      "@img/*": ["./public/img/*"],
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
